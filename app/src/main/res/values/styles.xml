<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="actionMenuTextColor">@color/toolbar_text</item>
        <item name="popupTheme">@style/Base.ThemeOverlay.AppCompat.Light</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">16dp</item>
        <!--<item name="android:textAllCaps">false</item>-->
    </style>

    <style name="AppTheme.EventItem" parent="AppTheme">
        <item name="android:textViewStyle">@style/AppTheme.TextView_Small</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="AppTheme.TextView_Small">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
